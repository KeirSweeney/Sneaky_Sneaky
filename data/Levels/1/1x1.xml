  <object position="3.2 -0.01 -4.6" angles="0 0 0" scale="50" model="SofaLength" material="Sofa"></object>
  <object position="4.96 0 -2" angles="0 -90 0" scale="50" model="SofaEnd" material="Sofa"></object>
  <object position="4.96 0 2" angles="0 90 0" scale="50" model="SofaEnd" material="Sofa"></object>
  <object position="1.8 0 4.95" angles="0 180 0" scale="50" model="SofaEnd" material="Sofa"></object>
  <object position="1.8 0 -4.95" angles="0 180 0" scale="50" model="SofaEnd" material="Sofa"></object>

  <!--COOLERS-->
