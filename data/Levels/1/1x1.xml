  <object position="2 0 -2.7" angles="0 0 0" scale="25" model="CoffeeTableGlass" material="CoffeeTableGlass"></object>
  <object position="2 0 -2.7" angles="0 0 0" scale="25" model="CoffeeTableLegs" material="CoffeeTableLegs"></object>

  <!--SOFAS-->
